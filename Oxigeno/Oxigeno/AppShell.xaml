<?xml version="1.0" encoding="utf-8"?>
<Shell
    x:Class="Oxigeno.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Oxigeno.Pages"
    FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.NavBarHasShadow="False">

    <!-- Registro de rutas: ya no usamos FlyoutItem ni tÃ­tulo superior -->
    <ShellContent
      Route="LoginPage"
      ContentTemplate="{DataTemplate local:LoginPage}" />

    <ShellContent
      Route="MenuPage"
      ContentTemplate="{DataTemplate local:MenuPage}" />

    <ShellContent
      Route="ServiciosPage"
      ContentTemplate="{DataTemplate local:ServiciosPage}" />

    <ShellContent
      Route="DevPage"
      ContentTemplate="{DataTemplate local:DevPage}" />

</Shell>
